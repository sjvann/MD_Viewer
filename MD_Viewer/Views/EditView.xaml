<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MD_Viewer.ViewModels"
             x:Class="MD_Viewer.Views.EditView"
             x:DataType="viewmodels:EditViewModel">

    <Grid>
        <!-- 編輯器 -->
        <Editor x:Name="MarkdownEditor"
                Text="{Binding MarkdownContent}"
                FontFamily="Consolas"
                FontSize="14"
                BackgroundColor="White"
                TextColor="Black"
                Placeholder="在此輸入 Markdown 內容..."
                PlaceholderColor="Gray"
                Margin="8"
                IsVisible="{Binding ShowEditor}" />

        <!-- 空狀態顯示 -->
        <Label Text="請選擇一個 Markdown 檔案以編輯內容"
               TextColor="{StaticResource Gray500}"
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="{Binding ShowEmptyState}" />
    </Grid>

</ContentView>

