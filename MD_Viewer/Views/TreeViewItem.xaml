<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MD_Viewer.Models"
             xmlns:views="clr-namespace:MD_Viewer.Views"
             x:Class="MD_Viewer.Views.TreeViewItem"
             x:DataType="models:FileNode">

    <VerticalStackLayout>
        <!-- ç¯€é»žæœ¬èº« -->
        <Grid Padding="4,2">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnNodeTapped" />
            </Grid.GestureRecognizers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- å±•é–‹/æ”¶åˆæŒ‰éˆ•ï¼ˆåƒ…ç›®éŒ„ï¼Œä½¿ç”¨ + å’Œ -ï¼‰ -->
            <Button Grid.Column="0"
                    Clicked="OnExpandButtonClicked"
                    WidthRequest="30"
                    HeightRequest="30"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    BorderColor="Transparent"
                    BorderWidth="0"
                    Margin="0,0,4,0"
                    FontSize="16"
                    FontAttributes="Bold"
                    Padding="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Text="+">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding Type}" Value="Directory">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding Type}" Value="File">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsExpanded}" Value="True">
                        <Setter Property="Text" Value="âˆ’" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button" Binding="{Binding IsExpanded}" Value="False">
                        <Setter Property="Text" Value="+" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <!-- ç¯€é»žåœ–ç¤º -->
            <Label Grid.Column="1"
                   VerticalOptions="Center"
                   FontSize="12"
                   Margin="0,0,4,0">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding Type}" Value="Directory">
                        <Setter Property="Text" Value="ðŸ“" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Type}" Value="File">
                        <Setter Property="Text" Value="ðŸ“„" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <!-- ç¯€é»žåç¨± -->
            <Label Grid.Column="2"
                   Text="{Binding Name}"
                   VerticalOptions="Center"
                   FontSize="14" />
        </Grid>

        <!-- å­ç¯€é»žï¼ˆéžè¿´é¡¯ç¤ºï¼‰ -->
        <VerticalStackLayout IsVisible="{Binding IsExpanded}"
                             Margin="20,0,0,0">
            <CollectionView ItemsSource="{Binding Children}"
                            BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:FileNode">
                        <views:TreeViewItem BindingContext="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentView>

